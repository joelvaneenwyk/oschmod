# see http://editorconfig.org
root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8

[*.{md,markdown}]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 1

[*.{yaml,yml}]
indent_size = 2

[*.{cmd,bat}]
end_of_line = crlf
